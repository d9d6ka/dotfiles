# Low-level X apps preferences
xrdb -merge ~/.Xresources &
xrdb -merge ~/.config/Xresources/Base16-Zenburn &

# Mate PolKit Agent
/usr/libexec/polkit-mate-authentication-agent-1 &

# Notifications
dunst &

# Compositor
compton -b &

# Wallpaper
nitrogen --restore &

# Panel
tint2 &

# NetworkManager applet
nm-applet &

# Volume tray icon (pulseaudio)
# pasystray &
volctl &
# pnmixer &

# Power manager
mate-power-manager &

# Keyboard layouts
killall xxkb
(setxkbmap -layout us,ru -variant -option grp:alt_shift_toggle && xxkb) &

# DBus
export $(dbus-launch)

# Clipboard manager
clipmenud &

# Daemonise PCManFM
pcmanfm -d

