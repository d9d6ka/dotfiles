#!/usr/bin/env bash

res=$(dmenu -i -F -c -bw 2 -l 6 -p "Choose:" <<EOF
lock
suspend
hibernate
logout
reboot
shutdown
EOF
)

echo "$res"

[ -z "$res" ] && exit

if [ $res = "lock" ]; then
	i3lock-fancy && sleep 1
fi
if [ $res = "suspend" ]; then
	i3lock-fancy && sleep 1 && sudo zzz #systemctl suspend
fi
if [ $res = "logout" ]; then
    case "$DESKTOP_SESSION" in
        "awesome") echo 'awesome.quit()' | awesome-client ;;
        "bspwm") bspc quit ;;
        "dwm") xdotool key Super+Shift+q ;;
        "i3") i3-msg exit ;;
        "icewm") pkill icewm ;;
        "icewm-session") pkill icewm ;;
        "jwm") jwm -exit ;;
        "openbox") openbox --exit ;;
    esac
fi
if [ $res = "hibernate" ]; then
	i3lock-fancy && sleep 1 && sudo ZZZ #systemctl hibernate
fi
if [ $res = "reboot" ]; then
	#systemctl reboot
    sudo reboot
fi
if [ $res = "shutdown" ]; then
	#systemctl poweroff -i
    sudo shutdown -P now
fi
